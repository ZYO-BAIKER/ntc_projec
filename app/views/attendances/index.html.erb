<%= render "header" %>

<div class="calendar container my-3">
  <div class="card">
    <div class="card-body">
      <%= form_with url: show_date_attendances_path, method: :get, class: 'row justify-content-center' do |f| %>
        <div class="col-12 col-sm-4 col-md-3">
          <%= f.date_field :date, value: Date.today, class: 'form-control mb-2 mb-sm-0', style: 'max-width: 150px;' %>
        </div>
        <div class="col-12 col-sm-2">
          <%= f.submit '日付を選択', id: 'show_button', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
