<div class="card mb-4">
  <div class="card-header">
    修理
  </div>
  <div class="card-body">
    <div class="form-group row">
      <%= f.label :repair_request, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :repair_request, class: 'form-control', placeholder: '修理依頼先入力' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :repair_count, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.number_field :repair_count, class: 'form-control', placeholder: '修理数量入力', min: "0" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :inspection_date, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.date_field :inspection_date, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :inspection_content, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_area :inspection_content, class: 'form-control', maxlength: "200", placeholder: '修理内容入力' %>
      </div>
    </div>
  </div>
</div>
