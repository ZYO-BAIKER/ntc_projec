<%= search_form_for @q, url: result_materials_path, html: { class: "row g-3" } do |f| %>
  <div class="col-sm-6 col-md-3">
    <%= f.label :material_name_cont, '資産名：' %>
    <%= f.text_field :material_name_cont, class: 'form-control' %>
  </div>
  <div class="col-sm-6 col-md-3">
    <%= f.label :maker_cont, 'メーカー：' %>
    <%= f.text_field :maker_cont, class: 'form-control' %>
  </div>
  <div class="col-sm-6 col-md-3">
    <%= f.label :locations_place_cont, '場所：' %>
    <%= f.text_field :locations_place_cont, class: 'form-control' %>
  </div>
  <div class="col-sm-6 col-md-3">
    <%= f.label :locations_user_eq, '使用者：'%>
    <%= f.collection_select :locations_user_eq, UserSelect.all, :name, :name, {include_blank:'指定なし'}, class: 'form-select' %>
  </div>
  <div class="col-12">
    <%= f.submit '絞り込み', class: 'btn btn-primary' %>
  </div>
<% end %>
