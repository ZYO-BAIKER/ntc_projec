<div class="card mb-4">
  <div class="card-header">
    購入
  </div>
  <div class="card-body">
    <div class="form-group row">
      <%= f.label :purchase_date, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.date_field :purchase_date, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :purchase_price, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10 d-flex align-items-center">
        <%= f.number_field :purchase_price, class: 'form-control price-input', placeholder: '例）3000', min: 0 %>
        <span class="ml-2">円</span>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :purchase_place, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :purchase_place, class: 'form-control', maxlength: '30' %>
      </div>
  </div>
</div>
