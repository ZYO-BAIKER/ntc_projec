<div class="card mb-4">
  <p class="card-header">資材情報</p>

  <div class="card-body">
    <div class="form-group row">
      <label for="material_name" class="col-sm-2 col-form-label">資産名<span class="text-danger">（※）</span></label>
      <div class="col-sm-10">
        <%= f.text_field :material_name, class: "form-control", maxlength: "20", style:"max-width:300px;" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="maker" class="col-sm-2 col-form-label">メーカー<span class="text-danger">（※）</span></label>
      <div class="col-sm-10">
        <%= f.text_field :maker, class: "form-control", maxlength: "20", style:"max-width:300px;" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="all_count" class="col-sm-2 col-form-label">全数量<span class="text-danger">（※）</span></label>
      <div class="col-sm-10">
        <%= f.number_field :all_count, class: "form-control", style:"max-width:100px;", placeholder:"半角数字", min:0, readonly: current_user.authority == 1 %>
      </div>
    </div>

    <div class="form-group row">
      <label for="company_count" class="col-sm-2 col-form-label">会社数量(入力不可)<span class="text-danger">（※）</span></label>
      <div class="col-sm-10">
        <%= f.number_field :company_count, class: "form-control", style:"max-width:100px;", placeholder:"自動算出", min:0, readonly:"readonly" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="company_count" class="col-sm-2 col-form-label">メモ</label>
      <div class="col-sm-10 mx-auto">
        <%= f.text_area :memo, class: "form-control", maxlength: "200",  placeholder:"200文字まで" %>
      </div>
    </div>
  </div>
</div>
